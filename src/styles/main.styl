@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700');
@import url('https://fonts.googleapis.com/css?family=Anton');

* {
  box-sizing border-box
  margin 0
  padding 0
}

html {
  font-size 62.5%
  font-family 'Lato', 'Helvetica Neue', sans-serif
  
}

body
  overflow-x: hidden
  background-color #0f172e
  max-width 130rem
  min-width 320px
  margin auto
  font-size 2rem
  color #d5d4e3

header {
  height: 6rem
  box-shadow: inset 0 -2px 0 0 black; 
  
}

.header {
  margin: .5rem 1rem
  display: flex
  justify-content: space-between  
}

.header h2 {
  font-size: 4rem
}

.nav {
  width: 50vw
  height: 100%
  display: flex;
  justify-content: flex-end
}

.nav li {
  list-style: none
  margin: 0 0.6rem;
  display: flex
  align-items: center
}

.nav li a {
  font-size: 2rem;
  text-decoration: none;
  color #d5d4e3
}

.nav li a:hover {
  color: gray
}

main 
  height: 92vh

.products-container {
  height: auto
  width: auto
  margin: .5rem 2rem
  padding: .5rem
  background-color: #1b2949
  border-radius: 7px
}

.product-container {
  min-height: 5rem
  background-color: #1b2949
  border: 2px solid #25385B
  margin: .5rem 0

  border-radius: 5px
}

